#main
	padding 100px 0
	min-height 100vh
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	@media screen and (max-width 1199px)
		display block
	@media screen and (max-width 991px)
		padding 60px 0
.circle-main
	width 312px
	height: 312px
	top -160px
	left -300px
	@media screen and (max-width 991px)
		width 200px
		height: 200px
		top -100px
		left -190px
	@media screen and (max-width 560px)
		width 150px
		height: 150px
		left -140px
.circle-dashed
	width 300px
	height: 300px
	position absolute
	top 200px
	right 50px
	background-image: url(../img/images/circle-1.png)
	background-repeat no-repeat
	background-position: center
	background-size contain
	@media screen and (max-width 991px)
		width 200px
		height: 200px
		right -50px
	@media screen and (max-width 560px)
		width 150px
		height: 150px
.line-main
	width 456px
	top 0
	right -200px
	@media screen and (max-width 560px)
		width 200px
		right -100px
	@media screen and (max-width 560px)
		right -150px
		top -50px
.main-title
	font-family: G
	font-size: 36px
	font-weight: bold
	text-transform uppercase
	margin-bottom: 40px
	color #416BD8
	@media screen and (max-width 1199px)
		font-size: 30px
	@media screen and (max-width 560px)
		font-size: 26px
		margin-bottom: 25px
	@media screen and (max-width 386px)
		font-size: 24px
.main-text
	font-size: 24px
	margin-bottom: 20px
	span
		font-weight: bold
	@media screen and (max-width 1199px)
		font-size: 18px
	@media screen and (max-width 560px)
		margin-bottom: 10px
.button-main
	max-width 380px
	margin 0 0 40px
	@media screen and (max-width 1199px)
		max-width 345px
	@media screen and (max-width 560px)
		margin-bottom: 25px
		padding 17px