#prices
	padding 100px 0
.line-prices
	width 600px
	bottom: 300px
	left -200px
.general-img-prices
	width 300px
	height: 300px
	background-image: url(../img/images/circle-1.png)
	background-repeat: no-repeat
	background-position: center
	background-size: contain
	top -150px
	right -100px
.general-title-prices
	margin-bottom: 60px
	small
		display block
		font-size: 24px
		font-weight: bold
		text-transform none
		color #000
		width 60%
		margin 0 auto
		line-height: 90%
.packet
	width 100%
	max-width 560px
	margin 0 auto 45px
	box-shadow: 14px 15px 26px rgba(0, 0, 0, 0.09);
	border-radius: 20px;
	background-color #fff
	padding 30px 30px 45px
	text-align center
	&-head
		font-family: G
		font-size: 26px
		font-weight: bold
		text-transform uppercase
		small
			font-family: M
			font-weight: 300
			text-transform none
			font-size: 16px
			display block
	&-body
		padding 20px 0
		min-height 130px
		&-text
			font-size: 18px
			margin-bottom: 10px
			span
				text-transform uppercase
				font-weight: bold
				font-size: 24px
				display block
				color red
.cost
	font-size: 26px
	font-weight: bold
	margin-bottom: 25px
	span
		display block
		font-family: G
		font-size: 66px
		font-weight: 900
		text-transform uppercase
		color #416bd8