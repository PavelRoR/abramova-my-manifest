#prices
	padding 100px 0
	@media screen and (max-width 991px)
		padding 60px 0 0
	@media screen and (max-width 560px)
		padding 0 0 40px
.line-prices
	width 600px
	bottom: 300px
	left -200px
.general-img-prices
	width 300px
	height: 300px
	background-image: url(../img/images/circle-1.png)
	background-repeat: no-repeat
	background-position: center
	background-size: contain
	top -150px
	right -100px
	@media screen and (max-width 767px)
		width 200px
		height 200px
	@media screen and (max-width 560px)
		right -150px
.general-title-prices
	margin-bottom: 60px
	@media screen and (max-width 560px)
		margin-bottom: 40px
	small
		display block
		font-size: 24px
		font-weight: bold
		text-transform none
		color #000
		width 60%
		margin 0 auto
		line-height: 90%
		@media screen and (max-width 650px)
			width 100%
			font-size: 20px
.packet
	width 100%
	max-width 560px
	margin 0 auto 45px
	box-shadow: 14px 15px 26px rgba(0, 0, 0, 0.09);
	border-radius: 20px;
	background-color #fff
	padding 30px 30px 45px
	text-align center
	@media screen and (max-width 560px)
		padding 20px 20px 35px
	@media screen and (max-width 386px)
		padding 15px 15px 20px
		margin-bottom: 30px
	&-head
		font-family: G
		font-size: 26px
		font-weight: bold
		text-transform uppercase
		@media screen and (max-width 560px)
			font-size: 22px
		small
			font-family: M
			font-weight: 300
			text-transform none
			font-size: 16px
			display block
			@media screen and (max-width 560px)
				font-size: 14px
	&-body
		padding 20px 0
		min-height 130px
		@media screen and (max-width 991px)
			min-height 1px
		@media screen and (max-width 386px)
			padding 10px 0
		&-text
			font-size: 18px
			margin-bottom: 10px
			@media screen and (max-width 560px)
				font-size: 16px
			span
				text-transform uppercase
				font-weight: bold
				font-size: 24px
				display block
				color red
				@media screen and (max-width 560px)
					font-size: 20px
.cost
	font-size: 26px
	font-weight: bold
	margin-bottom: 25px
	@media screen and (max-width 560px)
		font-size: 22px
		margin-bottom: 20px
	@media screen and (max-width 386px)
		margin-bottom: 10px
	span
		display block
		font-family: G
		font-size: 66px
		font-weight: 900
		text-transform uppercase
		color #416bd8
		@media screen and (max-width 560px)
			font-size: 46px