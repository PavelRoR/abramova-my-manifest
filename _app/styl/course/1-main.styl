#main
	position relative
	margin-bottom: 80px
	color #fff
	@media screen and (max-width 991px)
		background-color: #121112
		background-image: url(../img/backs/main-d.png)
		background-repeat no-repeat
		background-position: top left -200px
		background-size: cover
		padding 60px 0
		margin 0
		&:before
			content: ''
			display block
			position absolute
			top 0
			left 0
			width 100%
			height: 100%
			background-color: rgba(#000, .7)
	@media screen and (max-width 560px)
		background-image: url(../img/backs/main-m.png)
		background-position: top left
		&:before
			background-color: rgba(#000, .55)
	@media screen and (max-width 386px)
		padding 45px 0
.wrapper-abs
	position absolute
	top 0
	left 0
	right 0
	bottom: 0
	@media screen and (max-width 991px)
		position: relative
	&-main
		.content
			padding 120px 0 0
			height 100%
			@media screen and (max-width 1199px)
				padding-top: 70px
			@media screen and (max-width 991px)
				padding 0
.main-wrapper
	position absolute
	top: 0
	left 0
	display table
	width 100%
	height 100%
	@media screen and (max-width 991px)
		position: static
		display block
.main-content
	display table-cell
	vertical-align: middle
	width 100%
	position relative
	@media screen and (max-width 991px)
		display block
.main-bg
	display block
	width 1440px
	object-fit: cover
	object-position: center
	height 100%
	max-height: 940px
	margin 0 auto
	left calc(100vw - 1440px)
	right auto
	position relative
	top 0
	@media screen and (min-width 1440px)
		left 0
	@media screen and (max-width 1229px)
		left calc(100vw - 1390px)
	@media screen and (max-width 1199px)
		max-height 800px
	@media screen and (max-width 1100px)
		left calc(100vw - 1340px)
	@media screen and (max-width 1050px)
		max-height: 746px
		left calc(100vw - 1240px)
	@media screen and (max-width 991px)
		display none
.main-img
	position absolute
	width 1440px
	background-image: url(../img/images/hand.png)
	background-repeat no-repeat
	background-position: center
	background-size contain
	top 95px
	left calc(100vw - 1574px)
	right auto
	margin 0 auto
	height 279px
	z-index 20
	@media screen and (min-width 1440px)
		left -136px
	@media screen and (max-width 1229px)
		left calc(100vw - 1524px)
	@media screen and (max-width 1199px)
		top 25px
	@media screen and (max-width 1100px)
		left calc(100vw - 1474px)
	@media screen and (max-width 1050px)
		left calc(100vw - 1374px)
		top -2px
	@media screen and (max-width 991px)
		display none
.main-title
	position relative
	z-index 0
	top 0
	&-1
		width 1440px
		left calc(100vw - 1135px)
		@media screen and (min-width 1440px)
			left 305px
		@media screen and (max-width 1229px)
			left calc(100vw - 1085px)
		@media screen and (max-width 1199px)
			left calc(100vw - 1062px)
			img
				height: 92px
		@media screen and (max-width 1100px)
			left calc(100vw - 1008px)
		@media screen and (max-width 1050px)
			left calc(100vw - 915px)
		@media screen and (max-width 991px)
			width 100%
			top 0
			left 0
			margin-bottom: 20px
			z-index 10
		@media screen and (max-width 767px)
			img
				height 72px
		@media screen and (max-width 560px)
			img
				height: 62px
		@media screen and (max-width 386px)
			img
				height: 50px
		span
			width 187px
			height: 187px
			position absolute
			top -35px
			left -150px
			background-image: url(../img/images/pre-d.png)
			background-repeat no-repeat
			background-position: center
			background-size contain
			@media screen and (max-width 1199px)
				width 150px
				height: 150px
				top: -18px;
				left: -115px;
			@media screen and (max-width 991px)
				left 200px
			@media screen and (max-width 767px)
				width 130px
				height: 130px
				left 150px
			@media screen and (max-width 560px)
				width 100px
				height: 100px
				left 120px
				top -8px
			@media screen and (max-width 386px)
				left 100px
				top -16px
	&-2
		text-align right
		width 1440px
		left calc(100vw - 1590px)
		@media screen and (min-width 1440px)
			right: 150px
			left auto
		@media screen and (max-width 1229px)
			left calc(100vw - 1540px)
		@media screen and (max-width 1199px)
			left calc(100vw - 1615px)
			img
				height: 78px
		@media screen and (max-width 1100px)
			left calc(100vw - 1565px)
		@media screen and (max-width 1050px)
			left calc(100vw - 1482px)
		@media screen and (max-width 991px)
			text-align left
			width 100%
			left 0
		@media screen and (max-width 767px)
			img
				height: 58px
		@media screen and (max-width 560px)
			img
				height 48px
		@media screen and (max-width 386px)
			img
				height: 36px
.main-descript
	width 100%
	margin: 20px 0 120px auto
	text-align center
	@media screen and (max-width 1199px)
		margin: 20px 0 100px auto
	@media screen and (max-width 991px)
		width 50%
		margin-bottom: 40px
	@media screen and (max-width 767px)
		width 330px
	@media screen and (max-width 560px)
		width 230px
.main-subtitle
	color #416BD8
	font-family: G
	font-size: 38px
	font-weight: bold
	margin 0 0 18px
	text-transform uppercase
	@media screen and (max-width 1199px)
		font-size: 30px
	@media screen and (max-width 767px)
		font-size: 26px
	@media screen and (max-width 560px)
		font-size: 22px
.main-text
	font-size: 24px
	@media screen and (max-width 1100px)
		font-size: 20px
	@media screen and (max-width 767px)
		font-size: 18px
	@media screen and (max-width 560px)
		font-size: 16px
.main-info .col-xs-6
	@media screen and (max-width 386px)
		width 100%
.main-info-item
	display table
	width auto
	margin-bottom: 30px
	@media screen and (max-width 767px)
		margin-bottom: 10px
	@media screen and (max-width 386px)
		&-2
			margin-top: 20px
	&-number
		display table-cell
		padding-right: 10px
		@media screen and (max-width 1199px)
			height: 68px
		@media screen and (max-width 767px)
			height 60px
		@media screen and (max-width 560px)
			height 50px
	&-inner
		display table-cell
		vertical-align: bottom
		@media screen and (max-width 560px)
			img
				height: 15px
.button-main
	@media screen and (max-width 991px)
		margin-top: 45px
	@media screen and (max-width 386px)
		margin-top: 30px