.doubts-d
	background-color: #3A3939
	background-image: url(../img/backs/doubts-d.png)
	background-repeat no-repeat
	background-position: center top
	background-size: cover
	padding 45px 0 90px
	@media screen and (max-width 1199px)
		padding 45px 0 125px
		background-position: top left
	@media screen and (max-width 991px)
		display none !important
.doubts-mob
	display none
	@media screen and (max-width 991px)
		padding 50px 0 0
		display block !important
		&-container
			padding 20px 0 90px
			background-color: #3A3939
			background-image: url(../img/backs/doubts-m.png)
			background-repeat no-repeat
			background-position: center top
			background-size: cover
	@media screen and (max-width 560px)
		&-container
			padding 20px 0 55px
	@media screen and (max-width 480px)
		padding 0
		&-container
			background-position: top left
.circle-doubts
	width 349px
	height: 349px
	top -175px
	right -250px
	@media screen and (max-width 1199px)
		width 280px
		height: 280px
	@media screen and (max-width 991px)
		right -130px
		top -130px
	@media screen and (max-width 690px)
		width 190px
		height: 190px
		right -90px
		top -140px
	@media screen and (max-width 480px)
		width 120px
		height: 120px
		top -100px
		right -110px
.general-title-doubts
	margin-bottom: 45px
	@media screen and (max-width 991px)
		margin-bottom: 0
	small
		display block
		font-size: 24px
		font-weight: bold
		text-transform none
		color #fff
		position relative
		&:last-of-type
			margin-left: 300px
		@media screen and (max-width 1199px)
			font-size: 22px
		@media screen and (max-width 991px)
			color #000
			font-family: M
			font-weight: normal
			&:last-of-type
				margin-left: 100px
		@media screen and (max-width 767px)
			font-size: 20px
		@media screen and (max-width 593px)
			&:last-of-type
				margin-left: 50px
		@media screen and (max-width 560px)
			font-size: 16px
			&:last-of-type
				margin-left: 100px
		@media screen and (max-width 480px)
			&:last-of-type
				margin-left: 0
	span
		display block
		position relative
		&:first-of-type
			margin-left: 110px
			@media screen and (max-width 480px)
				margin-left: 0
		&:last-of-type
			margin-left: 40px
			@media screen and (max-width 480px)
				margin-left: 0
.doubts-text
	width 100%
	max-width 420px
	color #fff
	margin-bottom: 20px
	span
		font-weight: bold
	@media screen and (max-width 991px)
		max-width none
		width 50%
		margin-bottom: 40px
	@media screen and (max-width 386px)
		width 80%
		margin-bottom: 20px
.button-doubts
	margin 180px 0 0
	@media screen and (max-width 1199px)
		margin: 35px 0 0
	@media screen and (max-width 991px)
		margin-top: 70px
