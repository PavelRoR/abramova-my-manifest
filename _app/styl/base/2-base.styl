*
	margin 0
	padding 0
	outline none
body
	font-size: 22px
	font-family: M
	color #000
	background-color #fff
	line-height: 1.35
.container
	@media screen and (min-width 1230px)
		max-width 1440px
		width 98%
.wrapper
	overflow hidden
.content
	position relative
	z-index 60
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1, h2, h3, h4, h5, h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
section
	width 100%
	max-width 1440px
	margin 0 auto
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	display block
	text-align center
	margin 0 auto
	text-decoration none
	color: #fff
	width: 100%
	max-width 323px
	background-color #3561BC
	background-image: radial-gradient(112.8% 280.28% at 84.99% 29.35%, #416BD8 0%, #0D3397 95.43%)
	box-shadow: 1px 11px 15px rgba(0, 0, 0, 0.13);
	border-radius: 50px;
	padding: 27px 55px;
	font-weight: normal
	transition: all .3s ease-out
	&:focus
		text-decoration none
		color #fff
	&:hover
		text-decoration none
		color #fff
		transform: translateY(4px)
		box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.3);
	&-2
		background-color: #FFFCFC;
		background-image: none
		box-shadow: none
		border: 3px solid #416BD8;
		color #416BD8;
		&:focus
			background-color: #FFFCFC;
			color #416BD8;
			box-shadow: none
		&:hover
			background-color: #416BD8;
			color #FFFCFC
			box-shadow: none
			transform: none

.circle
	border-radius: 50%
	border: 3px solid #0D3397
	position absolute
.line
	position absolute
	height: 2px
	background-color: #416BD8
	transform: rotate(-30deg);
.general-title
	text-align center
.general-title
	text-transform uppercase
	font-family: G
	font-size: 36px
	font-weight: bold
	color #416BD8;
	text-align center
	line-height: 46px
	&-left
		text-align left
.general-img
	position absolute
	z-index 0
.d-none
	display none
	@media screen and (max-width 560px)
		display block
.mob-none
	@media screen and (max-width 560px)
		display none