.white-popup
	position: relative;
	background: #FFF
	border-radius 15px
	padding: 50px 20px;
	width: auto;
	max-width: 700px;
	margin: 20px auto;
	overflow hidden
	@media screen and (max-width 560px)
		padding 30px 20px 20px
	@media screen and (max-width 385px)
		padding 30px 15px 15px
.line-modal
	width 450px
	top 100px
	right -300px
	@media screen and (max-width 560px)
		top 75px
		right -325px
	@media screen and (max-width 386px)
		top 25px
		right -350px
.circle-modal
	position absolute
	width 250px
	height 250px
	bottom: -100px
	left -100px
	background-image: url(../img/images/circle-1.png)
	background-repeat no-repeat
	background-position: center
	background-size contain
	@media screen and (max-width 767px)
		width 175px
		height 175px
		bottom: -75px
		left -75px
	@media screen and (max-width 386px)
		width 100px
		height: 100px
		bottom: -50px
		left -50px
.mfp-close
	top 10px
	right 10px
	&:active
		top 10px
.mfp-fade.mfp-bg
	opacity: 0;
	transition: all 0.5s ease-out;
/* overlay animate in */
.mfp-fade.mfp-bg.mfp-ready
	opacity: 0.8;
/* overlay animate out */
.mfp-fade.mfp-bg.mfp-removing
	opacity: 0;
/* content at start */
.mfp-fade.mfp-wrap .mfp-content
	opacity: 0;
	transition: all 0.5s ease-out;
/* content animate it */
.mfp-fade.mfp-wrap.mfp-ready .mfp-content
	opacity: 1;
/* content animate out */
.mfp-fade.mfp-wrap.mfp-removing .mfp-content
	opacity: 0;
.general-title-modal
	margin: 0 auto 40px
	width 100%
	max-width 560px
	@media screen and (max-width 767px)
		max-width 395px
		margin-bottom: 25px
	@media screen and (max-width 560px)
		max-width 340px