.general-title-waits
	width 100%
	max-width 490px
	position relative
	margin-bottom: 70px
	span
		position absolute
		height: 116px
		width 25px
		right 0
		top 10px
		background-image: url(../img/icons/arrow.svg)
		background-repeat no-repeat
		background-position: center
		background-size contain
		z-index 30
		@media screen and (max-width 1199px)
			right 25px
	@media screen and (max-width 991px)
		margin-bottom: 30px
	@media screen and (max-width 767px)
		max-width 350px
		padding-right: 25px
		span
			right 0
			height 90px
	@media screen and (max-width 560px)
		max-width 290px
.line.line-waits
	width 706px
	top -40px
	left -420px
	@media screen and (max-width 1199px)
		top -140px
		left -500px
	@media screen and (max-width 991px)
		left auto
		right -540px
		top -440px
	@media screen and (max-width 560px)
		right -640px
.general-img-waits
	width 605px
	height: 555px
	top -300px
	right -145px
	background  url(../img/images/circle-2.png) no-repeat bottom 0 left 0, url(../img/images/moon.png) no-repeat top 0 right 0
	background-size:  455px, 360px
	@media screen and (max-width 1199px)
		width 500px
		height 455px
		background-size:  400px, 310px
		right -245px
		top -200px
	@media screen and (max-width 991px)
		background-size:  200px, 310px
		top -250px
		width 450px
		background-position:  top 50px left, top right
	@media screen and (max-width 386px)
		width 260px
		background-size:  90px, 200px
		top -150px
		right -150px
.waits-item
	width 100%
	max-width 380px
	box-shadow: 14px 15px 26px rgba(0, 0, 0, 0.09);
	border-radius: 20px;
	padding 120px 35px 15px
	background-repeat no-repeat
	background-position: top 17px left 35px
	min-height 285px
	@media screen and (max-width 1199px)
		padding 95px 30px 15px
		min-height 232px
	@media screen and (max-width 991px)
		min-height 120px
		max-width none
		padding 20px 20px 20px 120px
		margin-bottom: 25px
		display flex
		align-items: center
	@media screen and (max-width 386px)
		padding 20px 20px 20px 80px
	&-1
		background: url(../img/icons/waits-1.svg) no-repeat top 15px left 35px, linear-gradient(180.32deg, #D9D9D9 -56.71%, #FFFFFF 99.73%)
		@media screen and (max-width 1199px)
			background-size: 108px, 100%
		@media screen and (max-width 991px)
			background: url(../img/icons/waits-1.svg) no-repeat center left 20px, linear-gradient(180.32deg, #D9D9D9 -56.71%, #FFFFFF 99.73%)
			background-size: 80px, 100%
		@media screen and (max-width 386px)
			background-size: 40px, 100%
	&-2
		background: url(../img/icons/waits-2.svg) no-repeat top 15px left 35px, linear-gradient(180.32deg, #D9D9D9 -56.71%, #FFFFFF 99.73%)
		@media screen and (max-width 1199px)
			background-size: 108px, 100%
		@media screen and (max-width 991px)
			background: url(../img/icons/waits-2.svg) no-repeat center left 20px, linear-gradient(180.32deg, #D9D9D9 -56.71%, #FFFFFF 99.73%)
			background-size: 80px, 100%
		@media screen and (max-width 386px)
			background-size: 40px, 100%

	&-3
		background: url(../img/icons/waits-3.svg) no-repeat top 15px left 35px, linear-gradient(180.32deg, #D9D9D9 -56.71%, #FFFFFF 99.73%)
		@media screen and (max-width 1199px)
			background-size: 108px, 100%
		@media screen and (max-width 991px)
			background: url(../img/icons/waits-3.svg) no-repeat center left 20px, linear-gradient(180.32deg, #D9D9D9 -56.71%, #FFFFFF 99.73%)
			background-size: 80px, 100%
		@media screen and (max-width 386px)
			background-size: 40px, 100%
