#do
	padding 70px 0 100px
	position relative
	.container
		position absolute
		top 100px
		left 0
		right 0
		bottom: 0
		.content
			height 100%
.do-bg
	width 100%
	object-fit: cover
	object-position: center top
	height 100%
	max-height: 1096px
	margin-top: 180px
.circle-do-1
	width 301px
	height: 301px
	background-image: url(../img/images/circle-1.png)
	background-repeat no-repeat
	background-position: center
	background-size contain
	top 50px
	left 0
	position absolute
.circle-do-2
	width 517px
	height: 517px
	top 150px
	right -150px
.line-do
	width: 730px
	top 30px
	right -500px
	z-index -1
.general-title-do
	max-width 469px
	margin 0 auto 160px
	position relative
.circle-arrow
	position absolute
	border-radius: 50%
	width 86px
	height: 86px
	background-color: #416BD8
	background-image: radial-gradient(53.49% 60.47% at 71.51% 22.67%, #416BD8 0%, #0D3397 88.19%)
	transform: rotate(90deg);
	margin 0 auto
	right 0
	left 0
	&:before
		content ''
		display block
		position absolute
		width 20px
		height: 20px
		border-bottom: 2px solid #fff
		border-right: 2px solid #fff
		top 32px
		left 0
		right 0
		margin 0 auto
		transform: rotate(-45deg);
	&-do
		bottom: -100px
.do-item
	padding 50px
	background-color #fff
	box-shadow: 14px 15px 26px rgba(0, 0, 0, 0.09);
	border-radius: 20px;
	width 100%
	max-width 380px
	margin 0 auto 77px
	min-height 280px
.form
	width 100%
	max-width 320px
	margin 0 auto
.input
	display block
	width 100%
	border: 2px solid #416BD8;
	filter: drop-shadow(3px 22px 20px rgba(0, 0, 0, 0.13));
	border-radius: 50px;
	padding 25px
	color: #D9D9D9;
	background-color: transparent
	margin-bottom: 20px
	text-align center
	&::-webkit-input-placeholder
		color:#D9D9D9
		opacity:1;
	&::-moz-placeholder
		color:#D9D9D9
		opacity:1;
	&:-ms-input-placeholder
		color:#D9D9D9
		opacity:1;
@-webkit-keyframes autofill
	to
		font-size: 22px
		color: #D9D9D9;
		background-color: transparent
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.input:active
input:-internal-autofill-selected
	background-color: transparent !important
.alert-message
	clear both
	display: none;
	font-size: 16px;
	padding-top: 10px;
	color: #f00
	text-align: center
	font-weight: 700
	line-height: 1
.checking
	display: table;
	width 100%
	// max-width 455px
	margin: 5px auto 0
	text-align: left
@keyframes pulse
	0%
		box-shadow: 0 0 0 0 rgba(red, .12)
	100%
		box-shadow: 0 0 15px 10px rgba(red, .12)
.checking .check-label
	line-height: 22px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 30px;
	text-align: left;
	font-size: 14px
	color #4E4C4C
	@media screen and (max-width 991px)
		line-height: 18px
.checking .check-label a
	text-decoration: none
	border-bottom: 1px dashed
	display: inline
	color #4e4e4e
	&:focus
		border-bottom-color:
		color #4e4e4e
	&:hover
		border-bottom-color: transparent
		text-decoration: none
		color #4e4e4e
.checking .check-label:before
	content: '';
	background-color: red;
	position: absolute;
	left: 0;
	top: 3px;
	width: 25px;
	height: 25px;
	border none
	border-radius: 5px
	animation: pulse
	animation-duration: .7s
	animation-iteration-count: infinite
	animation-timing-function: ease-out;
.checking .check-label:after
	content: '';
	position: absolute;
	left: 9px;
	top: -10px;
	width: 8px;
	height: 14px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 2px solid #fff;
	border-right: 2px solid #fff;
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
.check
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
.check:checked + .check-label:before
	background-color: #416BD8
	animation: none
.check:checked + .check-label:after
	opacity: 1;
	top: 6px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;