#main
	position relative
	margin-bottom: 80px
	color #fff
	.container
		position absolute
		top 0
		left 0
		right 0
		bottom: 0
		.content
			padding 120px 0 0
			height 100%
.main-wrapper
	position absolute
	top: 0
	left 0
	display table
	width 100%
	height 100%
.main-content
	display table-cell
	vertical-align: middle
	width 100%
	position relative
.main-bg
	// display block
	// width 1440px
	// position absolute
	// top 0
	// left calc(100vw - 1440px)
	// right auto
	// margin 0 auto
	display block
	width 1440px
	object-fit: cover
	object-position: center
	height 100%
	max-height: 940px
	margin 0 auto
	left calc(100vw - 1440px)
	right auto
	position relative
	top 0
	@media screen and (min-width 1440px)
		left 0
.main-img
	position absolute
	width 1440px
	background-image: url(../img/images/hand.png)
	background-repeat no-repeat
	background-position: center
	background-size contain
	top 95px
	left calc(100vw - 1574px)
	right auto
	margin 0 auto
	height 279px
	z-index 20
	@media screen and (min-width 1440px)
		left -134px
.main-title
	position relative
	z-index 0
	top 0
	// text-transform uppercase
	// color #fff
	// font-family: G
	// font-size: 120px
	// font-weight: bold
	// line-height: 100%
	&-1
		width 1440px
		left calc(100vw - 1135px)
		@media screen and (min-width 1440px)
			left 305px
		span
			width 187px
			height: 187px
			position absolute
			top -35px
			left -150px
			background-image: url(../img/images/pre-d.png)
			background-repeat no-repeat
			background-position: center
	&-2
		text-align right
		// margin-right: 80px
		// left auto
		width 1440px
		left calc(100vw - 1590px)
		@media screen and (min-width 1440px)
			right: 150px
			left auto
.main-subtitle
	color #416BD8
	text-align center
	font-family: G
	font-size: 38px
	font-weight: bold
	margin 15px 0 18px
	text-transform uppercase
.main-text
	text-align center
	font-size: 24px
	margin-bottom: 120px
.main-info-item
	display table
	width auto
	margin-bottom: 30px
	&-number
		display table-cell
		padding-right: 10px
	&-inner
		display table-cell
		vertical-align: bottom