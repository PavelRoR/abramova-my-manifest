.general-title-video
	text-align: right
	position relative
	padding: 0 30px 30px 0
	span
		position absolute
		height: 126px
		width 35px
		right 0
		top 10px
		background-image: url(../img/icons/arrow.svg)
		background-repeat no-repeat
		background-position: center
		background-size contain
.video-content
	// min-height 1px
