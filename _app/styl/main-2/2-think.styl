.about
	&-content
		margin-left: 400px
	&-quote
		&-title
			position relative
			color #416BD8
			font-family: G
			font-size: 38px
			font-weight: bold
			text-transform uppercase
			margin 34px 0 30px 66px
			&:before
				content: ''
				display block
				position absolute
				top -28px
				left -66px
				width 88px
				height: 56px
				background-image: url(../img/icons/about-quotes.png)
				background-repeat: no-repeat
				background-position: center
				background-size contain
			span
				position relative
				&:before
					content: ''
					display block
					position absolute
					top 0
					right -66px
					width 88px
					height: 56px
					background-image: url(../img/icons/about-quotes.png)
					background-repeat: no-repeat
					background-position: center
					background-size contain
		&-text
			span
				font-weight: bold
			&:last-of-type
				margin-left: 230px
	&-content-title
		&s
			margin 60px auto 76px
			position relative
		font-size: 80px
		font-weight: 900
		text-transform uppercase
		color #EAEAEA
		text-shadow: 2px 2px 0px #fff, 2px 0 0px #fff, 0 2px 0px #fff,
		-2px 2px 0px #fff, 2px -2px 0px #fff, -2px 0 0px #fff, 0 -2px 0px #fff
		line-height:50px
		&-img
			position relative
			left 20px
			top -5px
			display block
			width 100%
			max-width 786px
	&-item
		&-title
			font-size: 50px
			font-weight: 900
			color #0D3397
			text-transform uppercase
			line-height: 34px
			small
				display block
				font-size: 22px
				font-weight: bold
				text-transform none
				margin-top: 20px
.button-about
