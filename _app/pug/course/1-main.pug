section#main
	+imgs('main-bg', 'img/backs/main-d.png','Main')
	.wrapper-abs.wrapper-abs-main
		.container
			.content
				.main-img
				//- +imgs('main-img', 'img/images/hand.png','Hand')
				//- +imgs('main-img', 'img/images/hand.png','Hand')
				h1.main-title.main-title-1
					+imgs('main-title-img', 'img/images/my.png','Мой')
					span
				h1.main-title.main-title-2
					+imgs('main-title-img', 'img/images/manifest.png','Манифест')
				.row
					.col-md-7.col-md-offset-5
						.main-descript
							h2.main-subtitle пересобери свою идентичность
							p.main-text Достигни своих целей и реализуй мечты с помощью современных психологических практик.
				.main-info
					.row
						.col-md-5.col-sm-6.col-xs-6
							.main-info-item.main-info-item-1
								+imgs('main-info-item-number', 'img/images/4.png', '4')
								.main-info-item-inner
									p.main-info-text длительность
									+imgs('main-info-item-date', 'img/images/weeks.png', 'недели')
								.clearfix
							p.main-info-item-text работаем с блоками, ограничивающими убеждениями, травмами и обидами, которые мешают вашей мечте стать реальностью.
						.col-md-3.col-sm-6.col-xs-6
							.main-info-item.main-info-item-2
								+imgs('main-info-item-number', 'img/images/22.png', '22')
								.main-info-item-inner
									p.main-info-text старт
									+imgs('main-info-item-date', 'img/images/august.png', 'август')
						.col-md-4.col-sm-12.col-xs-12
							+b('', href, 'Принять участие')